#include "esp_common.h"
#include "user_config.h"
/******************************************************************************
 * FunctionName : user_rf_cal_sector_set
 * Description  : SDK just reversed 4 sectors, used for rf init data and paramters.
 *                We add this function to force users to set rf cal sector, since
 *                we don't know which sector is free in user's application.
 *                sector map for last several sectors : ABCCC
 *                A : rf cal
 *                B : rf init data
 *                C : sdk parameters
 * Parameters   : none
 * Returns      : rf cal sector
*******************************************************************************/
uint32 user_rf_cal_sector_set(void)
{
    flash_size_map size_map = system_get_flash_size_map();
    uint32 rf_cal_sec = 0;

    switch (size_map) {
        case FLASH_SIZE_4M_MAP_256_256:
            rf_cal_sec = 128 - 5;
            break;

        case FLASH_SIZE_8M_MAP_512_512:
            rf_cal_sec = 256 - 5;
            break;

        case FLASH_SIZE_16M_MAP_512_512:
        case FLASH_SIZE_16M_MAP_1024_1024:
            rf_cal_sec = 512 - 5;
            break;

        case FLASH_SIZE_32M_MAP_512_512:
        case FLASH_SIZE_32M_MAP_1024_1024:
            rf_cal_sec = 1024 - 5;
            break;
        case FLASH_SIZE_64M_MAP_1024_1024:
            rf_cal_sec = 2048 - 5;
            break;
        case FLASH_SIZE_128M_MAP_1024_1024:
            rf_cal_sec = 4096 - 5;
            break;
        default:
            rf_cal_sec = 0;
            break;
    }

    return rf_cal_sec;
}
//测试gpio
void led_task(void* argument)
{
	PIN_FUNC_SELECT(PERIPHS_IO_MUX_MTDI_U,FUNC_GPIO12);
	PIN_FUNC_SELECT(PERIPHS_IO_MUX_MTCK_U,FUNC_GPIO13);
	PIN_FUNC_SELECT(PERIPHS_IO_MUX_MTDO_U,FUNC_GPIO15);

	for(;;)
	{
		//测试gpio与uart
		os_printf("set pin12 high\r\n");
		GPIO_OUTPUT_SET(GPIO_ID_PIN(12), 1);
		GPIO_OUTPUT_SET(GPIO_ID_PIN(13), 1);
		GPIO_OUTPUT_SET(GPIO_ID_PIN(15), 1);
		vTaskDelay(100);
		os_printf("set pin12 low\r\n");
		GPIO_OUTPUT_SET(GPIO_ID_PIN(12), 0);
		GPIO_OUTPUT_SET(GPIO_ID_PIN(13), 0);
		GPIO_OUTPUT_SET(GPIO_ID_PIN(15), 0);
		vTaskDelay(100);
	}
}

/*测试Flash 的读写 */
void flash_task(void* argument)
{
	SpiFlashOpResult result;
	int i_buf[6] = {1,2,3,4,5};
	int o_buf[6] = {};
	//初始化flash
	uint32 id =  spi_flash_get_id();
	os_printf("flash id %d\r\n",id);
	//写入数据
	spi_flash_erase_sector(FLASH_DATA1_START_ADDR/0x1000);
	result = pi_flash_write(FLASH_DATA1_START_ADDR,i_buf,sizeof(int));
	if (result != SPI_FLASH_RESULT_OK){
		os_printf("FLAHS write Error = %d",result);
	}
	//读出数据
	result = spi_flash_read(FLASH_DATA1_START_ADDR,o_buf,sizeof(int));
	if (result != SPI_FLASH_RESULT_OK){
			os_printf("FLAHS write Error = %d",result);
	}
	else
	{
		//打印数据
		os_printf("flash read buf:%d,%d,%d,%d,%d\r\n",o_buf[0],o_buf[1],o_buf[2],o_buf[3],o_buf[4]);
	}

	//停止任务
	vTaskDelete(NULL);
}

/******************************************************************************
 * FunctionName : user_init
 * Description  : entry of user application, init user function here
 * Parameters   : none
 * Returns      : none
*******************************************************************************/

void user_init(void)
{
	UART_SetBaudrate(UART0,BIT_RATE_115200);
    printf("SDK version:%s\n", system_get_sdk_version());
    printf("App verison:%s\n", APP_Version);

    os_printf("Hello World! -- Micheal\r\n");

    //测试gpio
    xTaskCreate(led_task,"led_task",512,NULL,2,NULL);
    //测试flash
    xTaskCreate(flash_task,"flash_task",512,NULL,2,NULL);
}

